<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.demo.spring_redis.mapper.LotteryMapper">

    <resultMap type="com.demo.spring_redis.entity.Lottery" id="lottery_map">
        <id column="id" property="id"/>
        <result column="activity_id" property="activityId"/>
        <result column="lottery_content" property="lotteryContent"/>
        <result column="sum" property="sum"/>
        <result column="inventory" property="inventory"/>
        <result column="prob" property="prob"/>
        <result column="create_time" property="createTime"/>
        <result column="alter_time" property="alterTime"/>
    </resultMap>

    <select id="selectLotteries" resultType="com.demo.spring_redis.entity.Lottery">
        select * from lottery
    </select>

    <select id="selectByActivityIdLotteries" parameterType="long" resultType="com.demo.spring_redis.entity.Lottery">
        select * from lottery where activity_id = #{activityId}
    </select>

    <insert id="insertOne" parameterType="com.demo.spring_redis.entity.Lottery">
        insert into lottery(activity_id, lottery_content, sum, inventory, prob, create_time, alter_time) values (
                                                                           #{activityId}, #{lotteryContent}, #{sum}, #{inventory}, #{prob}, #{createTime}, #{alterTime}
                                                                           )
    </insert>

</mapper>